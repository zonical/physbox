@using Sandbox;
@using Sandbox.UI;
@using System;
@inherits Panel
@namespace Physbox

@if ( Player is null ) return;
@if ( GameLogicComponent.GameMode != PhysboxConstants.GameModes.Deathmatch ) return;

<root>
	<div style="flex-direction:column; justify-content: center;">
		<div class="text title">Kills</div>
		<div class="text value">@Player.Kills</div>
	</div>
</root>

@code
{
	PlayerComponent Player => PlayerComponent.LocalPlayer;


	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash()
	{
		return HashCode.Combine( Player.Kills, GameLogicComponent.GameMode );
	}
}
