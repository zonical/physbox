@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@namespace Physbox

@if (Player is null) return;

<root>
	<div style="flex-direction:column; margin: auto;">
		<div class="small_label">
			Health
		</div>
		<div class="big_label">
			@Player.Health / @Player.MaxHealth
		</div>
	</div>

</root>

@code
{
	PlayerComponent Player => PlayerComponent.LocalPlayer;


	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine( Player.Health, Player.MaxHealth );
}
