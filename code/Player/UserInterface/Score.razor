@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@namespace Physbox

@if (Player is null) return;
@if (GameLogicComponent.GameMode != PhysboxConstants.GameModes.Deathmatch) return;

<root>
	<div class="background container">
		<p class="small_label">Kills</p>
		<p class="big_label">@Player.Kills</p>
	</div>
</root>

@code
{
	PlayerComponent Player => PlayerComponent.LocalPlayer;


	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine(Player.Kills, GameLogicComponent.GameMode);
}
